{
    "name": "spotify-playlist-generator",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "lint": "vue-cli-service lint",
        "storybook": "start-storybook"
    },
    "dependencies": {
        "npm": "^6.9.0",
        "register-service-worker": "^1.5.2",
        "vue": "^2.6.10",
        "vue-router": "^3.0.1",
        "vuex": "^3.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.6.2",
        "@storybook/vue": "^5.2.1",
        "@vue/cli-plugin-babel": "^3.0.5",
        "@vue/cli-plugin-eslint": "^3.0.5",
        "@vue/cli-plugin-pwa": "^3.0.5",
        "@vue/cli-service": "^4.1.1",
        "@vue/eslint-config-standard": "^4.0.0",
        "babel-eslint": "^10.0.1",
        "babel-loader": "^8.0.6",
        "babel-preset-vue": "^2.0.2",
        "eslint": "^5.8.0",
        "eslint-plugin-vue": "^5.0.0",
        "node-sass": "^4.13.0",
        "prettier": "^1.18.2",
        "sass-loader": "^7.1.0",
        "vue-loader": "^15.7.1",
        "vue-template-compiler": "^2.6.10"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "@vue/standard"
        ],
        "rules": {
            "indent": [
                "error",
                4
            ],
            "no-tabs": [
                "error",
                {
                    "allowIndentationTabs": true
                }
            ],
            "space-before-function-paren": [
                "error",
                {
                    "anonymous": "never",
                    "named": "never",
                    "asyncArrow": "always"
                }
            ],
            "arrow-spacing": [
                "error",
                {
                    "before": true,
                    "after": true
                }
            ]
        },
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ]
}
